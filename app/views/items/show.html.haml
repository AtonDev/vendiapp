.create-items
	.container-fluid
		.row
			.col-md-6.col-md-offset-3
				%h2 You have added the following item.
				%h3 Title
				%p 
					=@item.title
				%h3 Description
				%p 
					=@item.description
				%h3 Condition
				%p 
					=@item.condition
				%h3 Images
		.row
			.col-md-offset-3
				-@item.images.each_with_index do |img, idx|
					.col-md-2
						=image_tag img.photo.url(:thumb)