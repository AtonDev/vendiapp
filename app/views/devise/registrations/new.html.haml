.auth-forms
  .container-fluid
    .row
      .col-md-6.col-md-offset-3
        %h2 Sign up
        = form_for(resource, :as => resource_name, :url => :new_phone_verification, :method => :get) do |f|
          = devise_error_messages!
          .form-group
            = f.label "First Name"
            %br/
            = f.text_field :first_name,  :placeholder => "First",:autofocus => true, :class =>"form-control"
          .form-group
            = f.label "Last Name"
            %br/
            = f.text_field :last_name, :placeholder => "Last", :class =>"form-control"
          .form-group
            = f.label "Phone Number"
            %i.pull-right We will text you a code to activate your account.
            %br/
            = f.telephone_field :phone_number, :placeholder => "999-999-9999", :class =>"form-control"
          .form-group
            = f.label :email
            %br/
            = f.email_field :email, :placeholder => "example@example.com",  :class =>"form-control"
          .form-group
            = f.label :password
            %br/
            = f.password_field :password, :class =>"form-control"
          .form-group
            = f.label :password_confirmation
            %br/
            = f.password_field :password_confirmation, :class =>"form-control"
          %div= f.submit "Sign up", :class =>"btn btn-primary ", :style => "margin-bottom: 8px;"

        = render "devise/shared/links"
